<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/gradient_metal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:text="Server 1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:hint="Recognize Server"
            android:id="@+id/RecognizeServer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:text="Server 2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:hint="Palm Server"
            android:id="@+id/PalmServer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:text="Media"/>
        <ToggleButton
            android:id="@+id/PlayMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="On"
            android:textOff="Off" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/RadioCascade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_cascade_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_cascade_sample"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radio_cascade_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_cascade_win"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_cascade_rockchip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_cascade_rockchip"
            android:checked="false" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioProtocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_protocol_img"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_lbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_protocol_lbp"
            android:checked="false" />

    </RadioGroup>

</LinearLayout>